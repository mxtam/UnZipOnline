@{
    ViewData["Title"] = "Upload file";
}

<div class="row justify-content-center">
    <div class="col-4">
        <form asp-action="Upload" asp-controller="UnZip" method="post" enctype="multipart/form-data">
            <input class="form-control" name="uploadfile" type="file" accept=".zip"><br/>
            <input class="btn btn-primary" type="submit" value="Upload file">
        </form>
    </div>
</div>